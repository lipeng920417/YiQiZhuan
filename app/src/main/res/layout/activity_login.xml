<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include
        android:id="@+id/include_actionbar"
        layout="@layout/include_actionbar" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@mipmap/ic_header"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/background_conner_26_ff8e22_stroke_solid_white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ic_phone"></ImageView>

        <com.xw.repo.XEditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/tvNum"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:padding="5dp"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/color_222222"
            android:textColorHint="@color/color_cccccc"
            android:textSize="14sp"
            app:x_clearDrawable="@mipmap/ic_close_gray_circle"
            tools:visibility="visible"></com.xw.repo.XEditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/background_conner_26_ff8e22_stroke_solid_white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/ic_verifycode"></ImageView>

            <com.xw.repo.XEditText
                android:id="@+id/edtVerifycode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/tvNum"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/color_222222"
                android:textColorHint="@color/color_cccccc"
                android:textSize="14sp"
                app:x_clearDrawable="@mipmap/ic_close_gray_circle"
                tools:visibility="visible"></com.xw.repo.XEditText>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSend"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:text="发送验证码"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@drawable/background_conner_ff8e22_26dp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="24dp"
        android:text="登录"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/background_conner_ff8e22_26dp"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_checkbox"
            android:layout_marginTop="1dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tvAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_222222"
            android:text="用户隐私协议">
        </TextView>

    </LinearLayout>


</LinearLayout>