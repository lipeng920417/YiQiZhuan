<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_conner_ffffff_8dp"
    android:orientation="horizontal"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@mipmap/ic_custom_2"></ImageView>

        <RelativeLayout
            android:id="@+id/rlyYiXiaJia"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/background_conner_50000000_6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvYiXiaJia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="已下架"
                android:textColor="@color/white"
                android:textSize="13sp"></TextView>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ivTitle"
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/background_conner_ff1703_3dp"
                android:gravity="center"
                android:text="秒杀"
                android:textColor="@color/white"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:text="         进口香奈儿香奈儿香香香香奈儿香奈儿香香香香奈儿香奈儿香香香香奈儿香奈儿香香香香奈儿香奈儿香香香香奈儿香奈儿香香香"
                android:textColor="@color/color_191919"
                android:textSize="13sp"
                android:textStyle="bold"></TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvShuXing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="进口香奈儿香奈儿香香香香奈儿香奈儿香香香香奈儿香奈儿香香香"
            android:textColor="@color/color_858585"
            android:textSize="11sp"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_stroke_f9e4c4"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="金牌客服 | 暖心无忧"
                android:textColor="@color/color_e59722"
                android:textSize="9sp"></TextView>

            <TextView
                android:id="@+id/tvMeiRiXianGou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_stroke_fa2d1a"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="每日限购"
                android:textColor="@color/color_fa2d1a"
                android:textSize="9sp"
                android:visibility="gone"></TextView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMoneyL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/custom_font"
                android:text="￥ "
                android:textColor="@color/color_fa2c19"
                android:textSize="11sp"></TextView>

            <TextView
                android:id="@+id/tvMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/tvMoneyL"
                android:fontFamily="@font/custom_font"
                android:text="95731.00"
                android:textColor="@color/color_fa2c19"
                android:textSize="20sp"></TextView>


            <TextView
                android:id="@+id/tvOriginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@+id/tvMoney"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="¥6099"
                android:textColor="@color/color_818082"
                android:textSize="11sp"></TextView>

            <TextView
                android:layout_width="52dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:background="@drawable/background_conner_ff1703_10dp"
                android:gravity="center"
                android:text="立即抢"
                android:textColor="@color/white"
                android:textSize="11dp"
                android:layout_alignParentBottom="true"></TextView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/line"></View>

    </LinearLayout>

</LinearLayout>