<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_conner_ffffff_8dp"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/ivSelect"
        android:layout_width="28dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_checkbox"></ImageView>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_gengduochaozhihaowu"></ImageView>

        <RelativeLayout
            android:id="@+id/rlyYiXiaJia"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/background_conner_50000000_6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvYiXiaJia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="已下架"
                android:textColor="@color/white"
                android:textSize="13sp"></TextView>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/ivTitle"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_zunxianghui_title"></ImageView>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="进口 香奈儿香奈儿香香香香奈儿香奈儿香香香香奈儿香奈儿香香香"
                android:textColor="@color/color_333333"
                android:textSize="12sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvShuXing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_conner_f6f6f6_4dp"
            android:ellipsize="end"
            android:padding="3dp"
            android:singleLine="true"
            android:text="进口 香奈儿香奈儿香香香香奈儿香奈儿香香香香奈儿香奈儿香香香"
            android:textColor="@color/color_888888"
            android:textSize="11sp"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_stroke_f9e4c4"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="金牌客服 | 暖心无忧"
                android:textColor="@color/color_e59722"
                android:textSize="9sp"></TextView>

            <TextView
                android:id="@+id/tvMeiRiXianGou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_stroke_fa2d1a"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_marginLeft="5dp"
                android:text="每日限购"
                android:textColor="@color/color_fa2d1a"
                android:textSize="9sp"
                android:visibility="gone"></TextView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOriginalPriceL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="原价"
                android:textColor="@color/color_818082"
                android:textSize="10sp"></TextView>

            <TextView
                android:id="@+id/tvOriginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvOriginalPriceL"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="¥6099"
                android:textColor="@color/color_818082"
                android:textSize="11sp"></TextView>

            <LinearLayout
                android:id="@+id/llyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivJianHao"
                    android:layout_width="32dp"
                    android:layout_height="22dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_jianhao"></ImageView>

                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:background="@color/color_f1f1f1"
                    android:gravity="center"
                    android:maxWidth="200dp"
                    android:minWidth="50dp"
                    android:text="1"
                    android:textColor="@color/color_333333"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    android:textSize="13sp"></TextView>

                <ImageView
                    android:id="@+id/ivJiaHao"
                    android:layout_width="32dp"
                    android:layout_height="22dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_jiahao"></ImageView>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom_font"
                    android:text="95731.00"
                    android:textColor="@color/color_fa2c19"
                    android:textSize="13sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 元"
                    android:textColor="@color/color_fa2c19"
                    android:textSize="7.8sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="1dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom_font"
                    android:text=" + "
                    android:textColor="@color/color_fa2c19"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"></TextView>


                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/custom_font"
                    android:text="60999"
                    android:textColor="@color/color_fa2c19"
                    android:textSize="13sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 积分"
                    android:textColor="@color/color_fa2c19"
                    android:textSize="7.8sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="1dp"></TextView>

            </LinearLayout>
            <TextView
                android:id="@+id/tvStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅剩99999件"
                android:minWidth="70dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/color_fa2c19"
                android:textSize="10sp"
                android:visibility="gone"
                android:layout_marginRight="22dp"></TextView>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>