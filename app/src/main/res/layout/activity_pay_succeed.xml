<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/viewHeaderPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_transparent" />

    <include
        android:id="@+id/include_actionbar"
        layout="@layout/include_actionbar_transparent" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_pay_suc"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/custom_font"
        android:text="支付成功"
        android:textColor="@color/color_222222"
        android:textSize="24sp"></TextView>


    <TextView
        android:id="@+id/tvBtn"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/background_conner_ff1804_8dp"
        android:gravity="center"
        android:text="查看订单"
        android:textColor="@color/white"
        android:textSize="14sp"></TextView>


</LinearLayout>