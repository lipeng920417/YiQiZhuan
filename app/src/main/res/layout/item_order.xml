<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/background_conner_ffffff_8dp"
    android:orientation="vertical"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:paddingBottom="14dp"
    android:paddingTop="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvOrderNumberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号："
            android:textColor="@color/color_333333"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/tvOrderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrderNumberName"
            android:layout_marginTop="4dp"
            android:text="240731ZWRNQNS5"
            android:textColor="@color/color_333333"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="待收货"
            android:textColor="@color/color_7e7e7e"
            android:textSize="14dp"></TextView>
        
        <RelativeLayout
            android:id="@+id/rlyDaiPay"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/ic_pay_bg"
            android:visibility="visible">

            <TextView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:gravity="center"
                android:text="等待付款"
                android:background="@mipmap/ic_pay_bg_shang">
            </TextView>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_ff1804"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_marginRight="7dp"
                android:layout_alignParentRight="true"
                android:text="29分钟">
            </TextView>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:background="@color/line"></View>

    <LinearLayout
        android:id="@+id/llyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvTotalUseCouponName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvTotalUseCoupon"
            android:text="用券总额："
            android:textColor="@color/color_333333"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/tvTotalUseCoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="999"
            android:textColor="@color/color_333333"
            android:textSize="14dp"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvTotalPriceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvTotalPrice"
            android:text="合计："
            android:textColor="@color/color_333333"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="999"
            android:textColor="@color/color_333333"
            android:textSize="14dp"></TextView>
    </RelativeLayout>

    <View
        android:id="@+id/viewBtn"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:background="@color/line"></View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="67dp"
                android:layout_height="27dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_conner_14_c8c8c8_stroke_solid_white"
                android:gravity="center"
                android:text="删除订单"
                android:textColor="@color/color_333333"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/tvZaiCiGouMai"
                android:layout_width="67dp"
                android:layout_height="27dp"
                android:background="@drawable/background_conner_14_ff1804_stroke_solid_white"
                android:gravity="center"
                android:text="再次购买"
                android:textColor="@color/color_ff1804"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="67dp"
                android:layout_height="27dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_conner_14_c8c8c8_stroke_solid_white"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="@color/color_333333"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/tvPay"
                android:layout_width="67dp"
                android:layout_height="27dp"
                android:background="@drawable/background_conner_14_ff1804_stroke_solid_white"
                android:gravity="center"
                android:text="去支付"
                android:textColor="@color/color_ff1804"
                android:textSize="11dp"></TextView>

            <TextView
                android:id="@+id/tvChaKanWuLiu"
                android:layout_width="67dp"
                android:layout_height="27dp"
                android:background="@drawable/background_conner_14_c8c8c8_stroke_solid_white"
                android:gravity="center"
                android:text="查看物流"
                android:textColor="@color/color_333333"
                android:textSize="11dp"></TextView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

